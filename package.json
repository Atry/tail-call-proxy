{
  "name": "tail-call-proxy",
  "version": "1.1.10",
  "description": "A template for creating npm packages using TypeScript and VSCode",
  "main": "./lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "watch": {
    "concat-md": {
      "patterns": [
        "docs"
      ],
      "extensions": "md",
      "quiet": true
    },
    "ts-doctest": {
      "patterns": "README.md",
      "quiet": true
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "ts-doctest:watch": "npm-watch ts-doctest",
    "ts-doctest": "ts-doctest . test",
    "concat-md:watch": "npm-watch concat-md",
    "concat-md": "concat-md --toc --decrease-title-levels --dir-name-as-title docs > README.md",
    "typedoc:watch": "typedoc --watch",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "pretest": "typedoc && npm run concat-md && npm run ts-doctest",
    "watch": "npm-run-all --race --parallel *:watch",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Atry/tail-call-proxy.git"
  },
  "license": "MIT",
  "author": {
    "name": "Yang, Bo",
    "email": "pop.atry@gmail.com",
    "url": "https://yang-bo.com"
  },
  "engines": {
    "node": ">=12.0"
  },
  "keywords": [
    "tail",
    "tail-call",
    "tailcall",
    "proxy",
    "lazy",
    "utility",
    "utilities",
    "util",
    "utils",
    "memoize",
    "memoization",
    "functional",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/Atry/tail-call-proxy/issues"
  },
  "homepage": "https://github.com/Atry/tail-call-proxy#readme",
  "devDependencies": {
    "@ryansonshine/commitizen": "^4.2.8",
    "@ryansonshine/cz-conventional-changelog": "^3.3.4",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.5.2",
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "concat-md": "^0.5.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^29.3.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "prettier": "^2.2.1",
    "require-json5": "^1.3.0",
    "semantic-release": "^19.0.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.23.24",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.2.4",
    "typescript-doctest": "^1.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@ryansonshine/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            },
            {
              "type": "docs",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "README.md",
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "default-proxy-handler": "^1.0.0",
    "proxy-handler-decorators": "^1.0.1"
  }
}
